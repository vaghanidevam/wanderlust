<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Show All Users</title>
  <style>
    /* General body styles */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
      color: #333;
    }

    /* Sidebar styling */
    .sidebar {
      width: 250px;
      height: 100%;
      background-color: #222; /* Dark black background */
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 20px;
    }

    .sidebar ul {
      list-style-type: none;
      padding: 0;
    }

    .sidebar ul li {
      padding: 15px;
      text-align: center;
      margin: 10px 0;
      border-radius: 5px;
    }

    .sidebar ul li a {
      color: #fff; /* White text for links */
      text-decoration: none;
      font-weight: bold;
      display: block;
    }

    /* Sidebar hover effect */
    .sidebar ul li:hover {
      background-color: #ff4d4d; /* Red background on hover */
    }

    .sidebar ul li a:hover {
      color: #fff;
    }

    /* Main content area */
    .main-content {
      margin-left: 270px;
      padding: 30px;
    }

    /* Title styling */
    h2 {
      color: #222; /* Dark text color for headings */
      font-size: 2em;
    }

    /* Table styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    table, th, td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: center;
    }

    th {
      background-color: #f2f2f2;
      color: #333;
    }

    td {
      background-color: #fff;
    }

    /* Responsive design for mobile devices */
    @media (max-width: 767px) {
      .sidebar {
        width: 200px;
      }

      .main-content {
        margin-left: 0;
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <ul>
      <li><a href="/admin/admin-panel">Dashboard</a></li>
      <li><a href="/admin/users">Show All Users</a></li>
      <li><a href="/admin/listings">Show All Listings</a></li>
      <li><a href="/admin/approve-listing">Approve Listings</a></li>
    </ul>
  </div>

  <!-- Main content -->
  <div class="main-content">
    <h2>All Users</h2>

    <table>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
      <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <a href="/admin/users/<%= user._id %>/edit" style="color: #ff4d4d; font-weight: bold;">Edit</a>
        </td>
      </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>
